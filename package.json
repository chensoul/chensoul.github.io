{
  "name": "astro-lhasa",
  "type": "module",
  "version": "1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro check && astro build && pagefind --site dist && cp -r dist/pagefind public/",
    "preview": "astro preview --host --allowed-hosts=blog.lhasa.icu",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "spell": "pnpm dlx cspell --config cspell.yaml .",
    "md:check": "pnpm dlx markdownlint-cli2 ./content/posts/**",
    "md:fix": "pnpm dlx markdownlint-cli2 --fix ./content/posts/**"
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.13",
    "@astrojs/rss": "4.0.15",
    "@astrojs/sitemap": "3.7.0",
    "@expressive-code/plugin-collapsible-sections": "^0.41.3",
    "@expressive-code/plugin-line-numbers": "^0.41.2",
    "@fontsource/noto-sans": "^5.2.10",
    "@fontsource/noto-sans-sc": "^5.2.8",
    "@fontsource/roboto-mono": "^5.2.8",
    "@minify-html/node-darwin-arm64": "0.18.1",
    "@tailwindcss/vite": "^4.1.8",
    "@zokki/astro-minify": "^1.1.0",
    "astro": "^5.17.3",
    "astro-compressor": "^1.0.0",
    "astro-expressive-code": "^0.41.2",
    "astro-mermaid": "^1.3.1",
    "dayjs": "^1.11.19",
    "lodash.kebabcase": "^4.1.1",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.12.3",
    "photosuite": "0.2.1-beta",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-rewrite": "^4.0.2",
    "rehype-slug": "^6.0.0",
    "rehype-wrap-all": "^1.1.0",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.6",
    "@pagefind/default-ui": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "eslint": "^9.28.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.2.0",
    "pagefind": "^1.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
