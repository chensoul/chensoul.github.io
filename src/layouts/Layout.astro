---
import { ViewTransitions } from "astro:transitions";
import { SITE } from "@/config";
import "@/styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from "@/components/BackToTop.astro";
import BackButton from "@/components/BackButton.astro";

/**
 * 组件属性接口
 *
 * @property title - 页面标题，可不传；未传或为空时使用 SITE.title（网站名称）
 * @property author - 作者名称
 * @property description - 页面描述，可不传；未传或为空时使用 SITE.desc（站点描述）
 * @property canonicalURL - 规范链接
 * @property pubDatetime - 发布时间
 * @property modDatetime - 更新时间
 * @property scrollSmooth - 是否启用平滑滚动
 * @property toc - 是否启用目录
 * @property math - 是否启用数学公式
 * @property comments - 是否启用评论
 * @property mermaid - 是否启用 Mermaid 图表（仅文章启用时才加载脚本并渲染）
 * @property ogImage - 社交分享图路径（相对 public），如 "og.png" 或文章封面
 */
export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  toc?: boolean;
  math?: boolean;
  comments?: boolean;
  mermaid?: boolean;
}

// 解构属性，设置默认值（title 未传或为空时用网站名称）
const {
  title: titleProp,
  author = SITE.author,
  description: descriptionProp,
  ogImage: ogImageProp,
  canonicalURL = new URL(Astro.url.pathname.replace(/\.html?$/, ""), Astro.url),
  pubDatetime,
  modDatetime,
  toc = false,
  mermaid: _mermaid = false, // 由子布局（如 PostDetails）传入，本布局仅透传不消费
} = Astro.props;

const title = titleProp?.trim() || SITE.title;
const fullDescription = descriptionProp?.trim() || SITE.desc;

// 社交分享图：仅文章页传 ogImage 时有图（PostDetails 传 og/.../slug.png），非文章页不输出 og:image
// 必须使用站点主域名的绝对 URL，否则分享时爬虫无法正确拉取图片（Facebook/LinkedIn 等要求）
const ogImage = ogImageProp ?? "";
const hasOgImage = Boolean(ogImage);
const ogImagePath = ogImage.startsWith("/") ? ogImage.slice(1) : ogImage;
const socialImageURL = hasOgImage
  ? new URL(ogImagePath, SITE.website.endsWith("/") ? SITE.website : `${SITE.website}/`)
  : null;
const socialImageURLString = socialImageURL?.href ?? "";
/** OG 图尺寸（与 utils/og-image.ts 生成一致） */
const OG_IMAGE_WIDTH = 1200;
const OG_IMAGE_HEIGHT = 630;

/**
 * 结构化数据（JSON-LD）
 *
 * 用于搜索引擎理解页面内容，提升 SEO 效果
 * @see https://schema.org/BlogPosting
 */
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: `${title}`,
  ...(hasOgImage && socialImageURLString && { image: socialImageURLString }),
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`
    },
  ],
};
---

<!doctype html>
<html lang={SITE.lang}>
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={fullDescription} />
    <meta name="author" content={author} />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={fullDescription} />
    <meta property="og:url" content={canonicalURL} />
    {hasOgImage && socialImageURLString && (
      <>
        <meta property="og:image" content={socialImageURLString} />
        <meta property="og:image:secure_url" content={socialImageURLString} />
        <meta property="og:image:width" content={String(OG_IMAGE_WIDTH)} />
        <meta property="og:image:height" content={String(OG_IMAGE_HEIGHT)} />
        <meta property="og:image:alt" content={title} />
      </>
    )}
    <meta property="og:locale" content={SITE.langOg} />
    <meta property="og:type" content="website" />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter Card -->
    <meta property="twitter:card" content={hasOgImage ? "summary_large_image" : "summary"} />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={fullDescription} />
    {hasOgImage && socialImageURLString && (
      <>
        <meta property="twitter:image" content={socialImageURLString} />
        <meta property="twitter:image:alt" content={title} />
      </>
    )}

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="#ffffff" />

    <!-- Google 站点验证（config.ts 中配置 googleSiteVerification） -->
    {
      SITE.googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={SITE.googleSiteVerification}
        />
      )
    }

    {toc && (
      <>
        <link
          rel="stylesheet"
          href={SITE.tocbot.cssUrl}
          crossorigin="anonymous"
          referrerpolicy="no-referrer"
        />
      </>
    )}

    <!-- Theme initialization script to prevent flash -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', theme);
        var meta = document.querySelector('meta[name="theme-color"]');
        if (meta) meta.setAttribute('content', theme === 'dark' ? '#0f172a' : '#ffffff');
      })();
    </script>

    <!-- 子页面可注入 head 内容（如文章详情页的 Artalk） -->
  </head>
  <body>
    <a href="#main-content" class="skip-link">跳转到主要内容</a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <BackButton />
    <BackToTop />
    <Footer/>

    <!-- 主题切换：统一在 Layout 绑定，支持 View Transitions 后重新绑定；先更新 theme-color 再改 data-theme 减少闪白 -->
    <script is:inline define:vars={{ lightAndDarkMode: SITE.lightAndDarkMode }}>
      (function () {
        if (!lightAndDarkMode) return;
        function applyTheme(theme) {
          document.documentElement.setAttribute('data-theme', theme);
          var meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute('content', theme === 'dark' ? '#0f172a' : '#ffffff');
          localStorage.setItem('theme', theme);
        }
        function attachThemeToggle() {
          var btn = document.getElementById('theme-toggle');
          if (!btn) return;
          btn.removeEventListener('click', onToggle);
          btn.removeEventListener('keydown', onKeydown);
          btn.addEventListener('click', onToggle);
          btn.addEventListener('keydown', onKeydown);
        }
        function onToggle() {
          var cur = document.documentElement.getAttribute('data-theme') || 'light';
          var next = cur === 'light' ? 'dark' : 'light';
          applyTheme(next);
        }
        function onKeydown(e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            onToggle();
          }
        }
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', attachThemeToggle);
        } else {
          attachThemeToggle();
        }
        document.addEventListener('astro:page-load', attachThemeToggle);
      })();
    </script>

    <!-- Umami 分析（config.ts 中配置 SITE.umami；首屏后再加载以减轻 LCP 影响） -->
    {
      import.meta.env.PROD && SITE.umami?.websiteId && SITE.umami?.scriptUrl && (
        <script is:inline define:vars={{ websiteId: SITE.umami.websiteId, scriptUrl: SITE.umami.scriptUrl }}>
          (function () {
            if (!websiteId || !scriptUrl) return;
            let done = false;
            function load() {
              if (done) return;
              done = true;
              const s = document.createElement("script");
              s.src = scriptUrl;
              s.setAttribute("data-website-id", websiteId);
              s.defer = true;
              document.head.appendChild(s);
            }
            const delay = 3000;
            if (document.readyState === "complete") setTimeout(load, delay);
            else window.addEventListener("load", () => setTimeout(load, delay));
            ["click", "scroll", "keydown"].forEach((ev) =>
              window.addEventListener(ev, load, { once: true, passive: true })
            );
          })();
        </script>
      )
    }
  </body>
</html>
