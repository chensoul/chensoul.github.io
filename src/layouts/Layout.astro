---
/**
 * 基础布局组件
 *
 * @fileoverview 整个网站的最外层布局，包含 HTML head、meta 标签、全局样式
 *
 * 核心逻辑：
 * 1. SEO 优化：完整的 meta 标签、Open Graph、Twitter Cards
 * 2. Google 验证：支持 Google Search Console 验证
 * 3. 第三方集成：
 *    - Artalk 评论系统
 *    - Matomo 网站分析（仅生产环境）
 *    - Google Fonts 字体
 * 4. 条件加载：根据 toc、math 属性动态加载对应资源
 *
 * 依赖关系：
 * - 被 Main.astro、PostDetails.astro 等所有布局继承
 * - 导入全局样式、BackToTop 组件
 * - 使用 config.ts 获取站点配置
 */

import { SITE } from "@/config";
import "@/styles/global.css";
import BackToTop from "@/components/BackToTop.astro";
import BackButton from "@/components/BackButton.astro";

/**
 * 组件属性接口
 *
 * @property title - 页面标题
 * @property author - 作者名称
 * @property description - 页面描述
 * @property canonicalURL - 规范链接
 * @property pubDatetime - 发布时间
 * @property modDatetime - 更新时间
 * @property scrollSmooth - 是否启用平滑滚动
 * @property toc - 是否启用目录
 * @property math - 是否启用数学公式
 * @property comments - 是否启用评论
 * @property mermaid - 是否启用 Mermaid 图表（仅文章启用时才加载脚本并渲染）
 * @property ogImage - 社交分享图路径（相对 public），如 "og.png" 或文章封面
 */
export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  toc?: boolean;
  math?: boolean;
  comments?: boolean;
  mermaid?: boolean;
}

// 解构属性，设置默认值
const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  ogImage: ogImageProp,
  canonicalURL = new URL(Astro.url.pathname.replace(/\.html?$/, ""), Astro.url),
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
  toc = false,
  mermaid: _mermaid = false, // 由子布局（如 PostDetails）传入，本布局仅透传不消费
} = Astro.props;


const fullDescription = description;

// 社交分享图：仅文章页传 ogImage 时有图（PostDetails 传 og/.../slug.png），非文章页不输出 og:image
// 必须使用站点主域名的绝对 URL，否则分享时爬虫无法正确拉取图片（Facebook/LinkedIn 等要求）
const ogImage = ogImageProp ?? "";
const hasOgImage = Boolean(ogImage);
const ogImagePath = ogImage.startsWith("/") ? ogImage.slice(1) : ogImage;
const socialImageURL = hasOgImage
  ? new URL(ogImagePath, SITE.website.endsWith("/") ? SITE.website : `${SITE.website}/`)
  : null;
const socialImageURLString = socialImageURL?.href ?? "";
/** OG 图尺寸（与 utils/og-image.ts 生成一致） */
const OG_IMAGE_WIDTH = 1200;
const OG_IMAGE_HEIGHT = 630;

/**
 * 结构化数据（JSON-LD）
 *
 * 用于搜索引擎理解页面内容，提升 SEO 效果
 * @see https://schema.org/BlogPosting
 */
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: `${title}`,
  ...(hasOgImage && socialImageURLString && { image: socialImageURLString }),
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`
    },
  ],
};
---

<!doctype html>
<html lang=`${SITE.lang ?? "en"}` class={`${scrollSmooth && "scroll-smooth"}`}>
  <head>
    <!-- 首屏防闪白：先隐藏，脚本设 data-theme 后由下方内联主题样式解除，不依赖延迟加载的 CSS（Critters 会推迟非 critical CSS） -->
    <style is:inline>html{visibility:hidden}</style>
    <!-- 主题首屏防 FOUC：从 localStorage 读 theme 并设 data-theme -->
    <script is:inline define:vars={{ lightAndDarkMode: SITE.lightAndDarkMode, themeIds: SITE.themes }}>
      (function(){
        const stored = lightAndDarkMode ? localStorage.getItem("theme") : null;
        const theme = (themeIds && themeIds.includes(stored)) ? stored : (themeIds && themeIds[0]) || "light";
        document.documentElement.setAttribute("data-theme", theme);
        window.theme = { themeValue: theme };
      })();
    </script>
    <!-- 内联首屏主题背景 + 显示，部署后 Critters 推迟主 CSS 时也避免闪白（与 variables.css 一致） -->
    <style is:inline>
      html[data-theme="light"]{visibility:visible !important}
      html[data-theme="light"] body{background-color:#fff}
      html[data-theme="light"] #site-frame{background-color:#fff}
      html[data-theme="dark"]{visibility:visible !important;color-scheme:dark}
      html[data-theme="dark"] body{background-color:#1e293b}
      html[data-theme="dark"] #site-frame{background-color:#1e293b}
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={fullDescription} />
    <meta name="author" content={author} />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={fullDescription} />
    <meta property="og:url" content={canonicalURL} />
    {hasOgImage && socialImageURLString && (
      <>
        <meta property="og:image" content={socialImageURLString} />
        <meta property="og:image:secure_url" content={socialImageURLString} />
        <meta property="og:image:width" content={String(OG_IMAGE_WIDTH)} />
        <meta property="og:image:height" content={String(OG_IMAGE_HEIGHT)} />
        <meta property="og:image:alt" content={title} />
      </>
    )}
    <meta property="og:locale" content={SITE.langOg} />
    <meta property="og:type" content="website" />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter Card -->
    <meta property="twitter:card" content={hasOgImage ? "summary_large_image" : "summary"} />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={fullDescription} />
    {hasOgImage && socialImageURLString && (
      <>
        <meta property="twitter:image" content={socialImageURLString} />
        <meta property="twitter:image:alt" content={title} />
      </>
    )}

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="" />

    <!-- Google 站点验证（config.ts 中配置 googleSiteVerification） -->
    {
      SITE.googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={SITE.googleSiteVerification}
        />
      )
    }

    <!-- 主题切换：Astro Theme Switcher 方式（主题列表 + 持久化 + 平滑过渡 + View Transitions 恢复） -->
    <script is:inline define:vars={{ lightAndDarkMode: SITE.lightAndDarkMode, themeIds: SITE.themes }}>
      (function () {
        if (!lightAndDarkMode || !themeIds || !themeIds.length) return;
        const THEME_KEY = "theme";
        const themeBtnSel = "#theme-btn";
        const themeColorMetaSel = "meta[name=\"theme-color\"]";

        function getTheme() {
          const stored = localStorage.getItem(THEME_KEY);
          if (themeIds.includes(stored)) return stored;
          const current = document.documentElement.getAttribute("data-theme");
          return themeIds.includes(current) ? current : themeIds[0];
        }
        function setTheme(id) {
          if (!themeIds.includes(id)) return;
          if (window.theme) window.theme.themeValue = id;
          document.documentElement.setAttribute("data-theme", id);
          localStorage.setItem(THEME_KEY, id);
          var btn = document.querySelector(themeBtnSel);
          if (btn) btn.setAttribute("aria-label", id);
          var meta = document.querySelector(themeColorMetaSel);
          if (meta && document.body) {
            var bg = window.getComputedStyle(document.body).backgroundColor;
            if (bg) meta.setAttribute("content", bg);
          }
        }
        function nextTheme() {
          var i = themeIds.indexOf(getTheme());
          return themeIds[(i + 1) % themeIds.length];
        }
        function setupThemeButton() {
          setTheme(getTheme());
          var btn = document.querySelector(themeBtnSel);
          if (!btn) return;
          btn.addEventListener("click", function () {
            setTheme(nextTheme());
            requestAnimationFrame(function () {
              document.documentElement.classList.add("theme-transition");
            });
          });
        }
        window.theme = window.theme || {};
        window.theme.themeValue = getTheme();
        window.theme.getTheme = getTheme;
        window.theme.setTheme = setTheme;
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", setupThemeButton);
        } else {
          setupThemeButton();
        }
        document.addEventListener("astro:after-swap", function () {
          setTheme(getTheme());
          window.scrollTo({ left: 0, top: 0, behavior: "instant" });
        });
      })();
    </script>

    {toc && (
      <>
        <link
          rel="stylesheet"
          href={SITE.tocbot.cssUrl}
          crossorigin="anonymous"
          referrerpolicy="no-referrer"
        />
      </>
    )}

    <!-- 子页面可注入 head 内容（如文章详情页的 Artalk） -->
    <slot name="head" />

  </head>
  <body>
    <div
      id="site-frame"
      class="mx-auto w-full px-3 pt-[5rem] sm:w-[960px] sm:max-w-[72rem] sm:px-8"
    >
      <!-- 插槽：子布局内容 -->
      <slot />
    </div>
    <slot name="sidebar" />
    <BackButton />
    <BackToTop />

    <!-- Umami 分析（config.ts 中配置 SITE.umami；首屏后再加载以减轻 LCP 影响） -->
    {
      import.meta.env.PROD && SITE.umami?.websiteId && SITE.umami?.scriptUrl && (
        <script is:inline define:vars={{ websiteId: SITE.umami.websiteId, scriptUrl: SITE.umami.scriptUrl }}>
          (function () {
            if (!websiteId || !scriptUrl) return;
            let done = false;
            function load() {
              if (done) return;
              done = true;
              const s = document.createElement("script");
              s.src = scriptUrl;
              s.setAttribute("data-website-id", websiteId);
              s.defer = true;
              document.head.appendChild(s);
            }
            const delay = 3000;
            if (document.readyState === "complete") setTimeout(load, delay);
            else window.addEventListener("load", () => setTimeout(load, delay));
            ["click", "scroll", "keydown"].forEach((ev) =>
              window.addEventListener(ev, load, { once: true, passive: true })
            );
          })();
        </script>
      )
    }
  </body>
</html>
