---
/**
 * 基础布局组件
 *
 * @fileoverview 整个网站的最外层布局，包含 HTML head、meta 标签、全局样式
 *
 * 核心逻辑：
 * 1. SEO 优化：完整的 meta 标签、Open Graph、Twitter Cards
 * 2. Google 验证：支持 Google Search Console 验证
 * 3. View Transitions：启用 Astro 的页面切换动画
 * 4. 第三方集成：
 *    - Artalk 评论系统
 *    - Matomo 网站分析（仅生产环境）
 *    - Google Fonts 字体
 * 5. 条件加载：根据 toc、math 属性动态加载对应资源
 *
 * 依赖关系：
 * - 被 Main.astro、PostDetails.astro 等所有布局继承
 * - 导入全局样式、BackToTop 组件
 * - 使用 config.ts 获取站点配置
 */

import { ClientRouter } from "astro:transitions";
import { SITE } from "@/config";
import "@/styles/global.css";
import BackToTop from "@/components/BackToTop.astro";
import BackButton from "@/components/BackButton.astro";

/**
 * 组件属性接口
 *
 * @property title - 页面标题
 * @property author - 作者名称
 * @property description - 页面描述
 * @property canonicalURL - 规范链接
 * @property pubDatetime - 发布时间
 * @property modDatetime - 更新时间
 * @property scrollSmooth - 是否启用平滑滚动
 * @property toc - 是否启用目录
 * @property math - 是否启用数学公式
 * @property comments - 是否启用评论
 * @property mermaid - 是否启用 Mermaid 图表（仅文章启用时才加载脚本并渲染）
 * @property ogImage - 社交分享图路径（相对 public），如 "og.png" 或文章封面
 */
export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  toc?: boolean;
  math?: boolean;
  comments?: boolean;
  mermaid?: boolean;
}

// 解构属性，设置默认值
const {
  title = SITE.title,
  author = SITE.author,
  description = SITE.desc,
  ogImage: ogImageProp,
  canonicalURL = new URL(Astro.url.pathname.replace(/\.html?$/, ""), Astro.url),
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
  mermaid: _mermaid = false, // 由子布局（如 PostDetails）传入，本布局仅透传不消费
} = Astro.props;

const fullDescription = description;

// 社交分享图：文章可传 ogImage 覆盖，否则用站点默认（参考 astro-paper）
const ogImage = ogImageProp ?? (SITE.ogImage ? `/${SITE.ogImage}` : "/og.png");
const socialImageURL = new URL(ogImage.startsWith("/") ? ogImage : `/${ogImage}`, Astro.url);

/**
 * 结构化数据（JSON-LD）
 *
 * 用于搜索引擎理解页面内容，提升 SEO 效果
 * @see https://schema.org/BlogPosting
 */
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: `${title}`,
  image: `${socialImageURL}`,
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`
    },
  ],
};
---

<!doctype html>
<html lang=`${SITE.lang ?? "en"}` class={`${scrollSmooth && "scroll-smooth"}`}>
  <head>
    <!-- 参考 astro-paper：首字节内联脚本设置 data-theme，防止闪白 -->
    <script is:inline define:vars={{ lightAndDarkMode: SITE.lightAndDarkMode }}>
      (function(){
        var theme="light";
        if(lightAndDarkMode){
          var cur=localStorage.getItem("theme");
          theme=(cur==="dark"||cur==="light")?cur:(window.matchMedia&&window.matchMedia("(prefers-color-scheme: dark)").matches?"dark":"light");
        }
        document.documentElement.setAttribute("data-theme",theme);
        document.documentElement.style.backgroundColor=theme==="dark"?"#302e2c":"#f9f8f6";
        window.theme={themeValue:theme};
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={fullDescription} />
    <meta name="author" content={author} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={fullDescription} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:locale" content={SITE.langOg} />
    <meta property="og:type" content="website" />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter Card -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={fullDescription} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="" />

    <!-- Google 站点验证（config.ts 中配置 googleSiteVerification） -->
    {
      SITE.googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={SITE.googleSiteVerification}
        />
      )
    }

    <!-- View transitions: https://docs.astro.build/en/guides/view-transitions/-->
    <ClientRouter />

    <script>
      import "@/scripts/theme";
    </script>

    <!-- 子页面可注入 head 内容（如文章详情页的 Artalk） -->
    <slot name="head" />

  </head>
  <body>
    <div
      id="site-frame"
      class="mx-auto w-full px-3 pt-2 sm:mt-5 sm:w-[960px] sm:max-w-[72rem] sm:px-8 sm:pt-4 sm:shadow-[0_8px_24px_rgba(0,0,0,0.15)]"
    >
      <!-- 插槽：子布局内容 -->
      <slot />
    </div>
    <slot name="sidebar" />
    <BackButton />
    <BackToTop />

    <!-- Umami 分析（config.ts 中配置 SITE.umami；首屏后再加载以减轻 LCP 影响） -->
    {
      import.meta.env.PROD && SITE.umami?.websiteId && SITE.umami?.scriptUrl && (
        <script is:inline define:vars={{ websiteId: SITE.umami.websiteId, scriptUrl: SITE.umami.scriptUrl }}>
          (function () {
            if (!websiteId || !scriptUrl) return;
            let done = false;
            function load() {
              if (done) return;
              done = true;
              const s = document.createElement("script");
              s.src = scriptUrl;
              s.setAttribute("data-website-id", websiteId);
              s.defer = true;
              document.head.appendChild(s);
            }
            const delay = 3000;
            if (document.readyState === "complete") setTimeout(load, delay);
            else window.addEventListener("load", () => setTimeout(load, delay));
            ["click", "scroll", "keydown"].forEach((ev) =>
              window.addEventListener(ev, load, { once: true, passive: true })
            );
          })();
        </script>
      )
    }
  </body>
</html>
