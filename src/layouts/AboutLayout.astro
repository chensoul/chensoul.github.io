---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Layout from "./Layout.astro";
import Main from "./Main.astro";
import { SITE } from "@/config";

/**
 * 组件属性接口
 *
 * @property frontmatter - 页面 frontmatter 数据
 */
export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Main pageTitle={frontmatter.title}>
    <div
      id="about"
      class="prose !mt-0 pt-0 [&>*:first-child]:!mt-0 [&_p:first-of-type]:!mt-0 prose-img:mx-auto prose-img:block prose-img:w-full prose-img:max-w-full prose-img:border-0"
    >
      <slot />
    </div>
  </Main>
  <Footer />
</Layout>
