---
/**
 * 文章详情页布局
 *
 * @fileoverview 单篇文章的完整页面布局
 *
 * 核心逻辑：
 * 1. 渲染文章内容（使用 render() API）
 * 2. 生成上一篇/下一篇导航链接
 * 3. 条件加载：
 *    - TOC 目录（toc 属性）
 *    - KaTeX 数学公式（math 属性）
 *    - Artalk 评论（comments 属性）
 * 4. 侧边栏：显示文章目录（桌面端）
 *
 * 依赖关系：
 * - 被 /posts/[...slug]/index.astro 页面使用
 * - 继承 Layout.astro
 * - 导入 Header、Footer、Tag 等组件
 */

import { render, type CollectionEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Tag from "@/components/Tag.astro";
import Datetime from "@/components/Datetime.astro";
import Artalk from "@/components/Artalk.astro";
import { slugifyStr } from "@/utils/slugify";
import { PostUtils } from "@/utils/postUtils";
import IconChevronLeft from "@/assets/icons/IconChevronLeft.svg";
import IconChevronRight from "@/assets/icons/IconChevronRight.svg";
import IconTag from "@/assets/icons/IconTag.svg";
import { SITE } from "@/config";
import "photosuite/dist/photosuite.css";

/**
 * 组件属性接口
 *
 * @property post - 当前文章对象
 * @property posts - 所有文章数组（用于上一篇/下一篇导航）
 */
export interface Props {
  post: CollectionEntry<"blog">;
  posts: CollectionEntry<"blog">[];
}

const { post, posts } = Astro.props;

// 解构文章元数据
const {
  title,
  author,
  canonicalURL,
  date,
  updated,
  tags,
  toc,
  math,
  comments,
  mermaid,
} = post.data;

// 渲染文章内容
const { Content } = await render(post);

// OG 图：仅生产环境且 SITE.ogImage 为 true 时传入
const ogSlug =
  import.meta.env.PROD && SITE.ogImage
    ? PostUtils.getPath(post.id, post.filePath, false, post.data.date, post.data.timezone)
    : null;

const layoutProps = {
  title: SITE.title,
  author,
  pubDatetime: date,
  modDatetime: updated,
  canonicalURL,
  scrollSmooth: true,
  toc,
  math,
  comments,
  mermaid: mermaid ?? false,
  ...(ogSlug && { ogImage: `og/${ogSlug}.png` }),
};

/* ========== Prev/Next Posts ========== */

/**
 * 生成上一篇/下一篇导航
 *
 * 逻辑：
 * 1. 提取所有文章的路径、标题和日期
 * 2. 找到当前文章的索引
 * 3. 获取上一篇（索引-1）和下一篇（索引+1）
 */
const allPosts = posts.map(({ data: { title, date, timezone }, id, filePath }) => ({
  path: PostUtils.getPath(id, filePath, true, date, timezone),
  title,
}));

const currentPostPath = PostUtils.getPath(post.id, post.filePath, true, post.data.date, post.data.timezone);
const currentPostIndex = allPosts.findIndex(a => a.path === currentPostPath);

const prevPost = currentPostIndex > 0 ? allPosts[currentPostIndex - 1] : null;
const nextPost =
  currentPostIndex < allPosts.length - 1
    ? allPosts[currentPostIndex + 1]
    : null;

/** 预加载样式转正样式用，避免 TS 把 onload 属性内容当代码解析 */
const linkPreloadOnLoad = "this.onload=null;this.rel='stylesheet'";
---

<Layout {...layoutProps}>
  <!-- KaTeX 数学公式样式（仅文章详情且启用公式时加载） -->
  {math && (
    <link
      slot="head"
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.33/dist/katex.min.css"
      as="style"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
      onload={linkPreloadOnLoad}
    />
  )}
  {math && (
    <noscript slot="head">
      <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/katex@0.16.33/dist/katex.min.css"
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
    </noscript>
  )}
  <Header />

  <!-- 文章标题与发布日期（不在 main 内） -->
  <section class="mx-auto mt-4 mb-2 w-full max-w-4xl text-center">
    <h1 class="text-2xl font-semibold">{title}</h1>
    <Datetime
      pubDatetime={date}
      modDatetime={updated}
      timezone={post.data.timezone}
      format="absolute"
      class="mt-1 flex justify-center text-sm text-accent"
    />
  </section>

  <!-- 主内容区（TOC 在 main 外，大屏下与 main 同行） -->
  <main
    id="main-content"
    class="mx-auto w-full max-w-4xl pb-8"
    data-pagefind-body
  >
    <!-- 文章内容 -->
    <article
      id="article"
      class="js-toc-content mx-auto prose mb-12 max-w-4xl"
    >
      <Content />
    </article>

    <!-- 标签列表 -->
    <ul class="my-1 flex flex-col flex-wrap space-y-2 md:flex-row md:space-y-0">
      {
        tags.length > 0 && (
          <li class="flex items-center space-x-0.5">
            <IconTag class="mt-0.5 h-4 w-4" />
            <ul>
              {tags.map((tag: string) => (
                <Tag tag={slugifyStr(tag)} tagName={tag} />
              ))}
            </ul>
          </li>
        )
      }
    </ul>
    <hr class="my-6" />

    <!-- Previous/Next Post Buttons -->
    <div
      data-pagefind-ignore
      class="my-6 grid grid-cols-1 gap-6 sm:grid-cols-2"
    >
      <!-- 上一篇 -->
      {
        prevPost && (
          <a href={prevPost.path} class="flex w-full gap-1 hover:opacity-75">
            <IconChevronLeft class="inline-block flex-none" />
            <div>
              <div class="text-sm text-accent/85">{prevPost.title}</div>
            </div>
          </a>
        )
      }
      <!-- 下一篇 -->
      {
        nextPost && (
          <a
            href={nextPost.path}
            class="flex w-full justify-end gap-1 text-right hover:opacity-75 sm:col-start-2"
          >
            <div>
              <div class="text-sm text-accent/85">{nextPost.title}</div>
            </div>
            <IconChevronRight class="inline-block flex-none" />
          </a>
        )
      }
    </div>

    <!-- 评论容器 -->
    <div id="Comments"></div>
  </main>

  <Footer />
  <!-- 侧边栏：文章目录（与 astro-lhasa 一致，内联实现） -->
  <aside
    id="sidebar"
    slot="sidebar"
    class:list={["sidebar", "hidden lg:block", { "no-toc": !toc }]}
  >
    {toc && <div id="toc-container" class="js-toc" />}
    <div
      class="flex flex-col items-start space-y-0 truncate overflow-hidden whitespace-nowrap opacity-80"
    >
    </div>
  </aside>
</Layout>

<!-- Artalk 评论系统 -->
<Artalk />

<script is:inline data-astro-rerun define:vars={{ tocbotJsUrl: SITE.tocbot.jsUrl }}>
  /* Tocbot：与 astro-lhasa 一致内联，样式由 Layout 条件加载（tocbot CSS + 自定义） */
  (function () {
    if (!document.getElementById("toc-container")) return;
    const scrollSmoothOffset = 0;
    function initTocbot() {
      if (typeof window !== "undefined" && window.tocbot) {
        window.tocbot.init({
          tocSelector: ".js-toc",
          contentSelector: ".js-toc-content",
          headingSelector: "h2, h3, h4",
          hasInnerContainers: true,
          scrollSmoothDuration: 300,
          scrollSmoothOffset,
        });
      }
    }
    if (window.tocbot) {
      initTocbot();
    } else if (tocbotJsUrl) {
      const script = document.createElement("script");
      script.src = tocbotJsUrl;
      script.crossOrigin = "anonymous";
      script.referrerPolicy = "no-referrer";
      script.onload = initTocbot;
      document.body.appendChild(script);
    }
  })();
  document.addEventListener("astro:after-swap", () => {
    window.scrollTo({ left: 0, top: 0, behavior: "instant" });
  });
  function onPageReady() {
    window.scrollTo({ left: 0, top: 0, behavior: "instant" });
  }
  document.addEventListener("DOMContentLoaded", onPageReady);
  window.addEventListener("load", onPageReady);
</script>
