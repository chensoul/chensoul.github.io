---
/**
 * 文章详情页布局
 *
 * @fileoverview 单篇文章的完整页面布局
 *
 * 核心逻辑：
 * 1. 渲染文章内容（使用 render() API）
 * 2. 生成上一篇/下一篇导航链接
 * 3. 条件加载：
 *    - TOC 目录（toc 属性）
 *    - KaTeX 数学公式（math 属性）
 *    - Artalk 评论（comments 属性）
 * 4. View Transitions：标题使用 viewTransitionName
 * 5. 侧边栏：显示文章目录（桌面端）
 *
 * 依赖关系：
 * - 被 /posts/[...slug]/index.astro 页面使用
 * - 继承 Layout.astro
 * - 导入 Header、Footer、Tag 等组件
 */

import { render, type CollectionEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Tag from "@/components/Tag.astro";
import Artalk from "@/components/Artalk.astro";
import { slugifyStr } from "@/utils/slugify";
import { PostUtils } from "@/utils/postUtils";
import IconChevronLeft from "@/assets/icons/IconChevronLeft.svg";
import IconChevronRight from "@/assets/icons/IconChevronRight.svg";
import IconTag from "@/assets/icons/IconTag.svg";
import { SITE } from "@/config";
import "photosuite/dist/photosuite.css";

/**
 * 组件属性接口
 *
 * @property post - 当前文章对象
 * @property posts - 所有文章数组（用于上一篇/下一篇导航）
 */
export interface Props {
  post: CollectionEntry<"blog">;
  posts: CollectionEntry<"blog">[];
}

const { post, posts } = Astro.props;

// 解构文章元数据
const {
  title,
  author,
  canonicalURL,
  date,
  updated,
  tags,
  toc,
  math,
  comments,
  mermaid,
} = post.data;

// 渲染文章内容
const { Content } = await render(post);

const publishDisplayDate = (() => {
  const d = new Date(date);
  const yyyy = d.getFullYear();
  const mm = String(d.getMonth() + 1).padStart(2, "0");
  const dd = String(d.getDate()).padStart(2, "0");
  return `${yyyy}-${mm}-${dd}`;
})();

// 传递给 Layout 的属性
const layoutProps = {
  title: SITE.title,
  author,
  pubDatetime: date,
  modDatetime: updated,
  canonicalURL,
  scrollSmooth: true,
  toc,
  math,
  comments,
  mermaid: mermaid ?? false,
};

/* ========== Prev/Next Posts ========== */

/**
 * 生成上一篇/下一篇导航
 *
 * 逻辑：
 * 1. 提取所有文章的路径、标题和日期
 * 2. 找到当前文章的索引
 * 3. 获取上一篇（索引-1）和下一篇（索引+1）
 */
const allPosts = posts.map(({ data: { title, date, timezone }, id, filePath }) => ({
  path: PostUtils.getPath(id, filePath, true, date, timezone),
  title,
}));

const currentPostPath = PostUtils.getPath(post.id, post.filePath, true, post.data.date, post.data.timezone);
const currentPostIndex = allPosts.findIndex(a => a.path === currentPostPath);

const prevPost = currentPostIndex > 0 ? allPosts[currentPostIndex - 1] : null;
const nextPost =
  currentPostIndex < allPosts.length - 1
    ? allPosts[currentPostIndex + 1]
    : null;

/** 预加载样式转正样式用，避免 TS 把 onload 属性内容当代码解析 */
const linkPreloadOnLoad = "this.onload=null;this.rel='stylesheet'";
---

<Layout {...layoutProps}>
  {comments && (
    <link
      slot="head"
      rel="preconnect"
      href="https://unpkg.com"
      crossorigin
    />
  )}
  {comments && (
    <link
      slot="head"
      rel="preload"
      href="https://unpkg.com/artalk@2.9.1/dist/Artalk.css"
      as="style"
      onload={linkPreloadOnLoad}
    />
  )}
  {comments && (
    <noscript slot="head">
      <link
        rel="stylesheet"
        href="https://unpkg.com/artalk@2.9.1/dist/Artalk.css"
      />
    </noscript>
  )}
  <!-- TOC 样式（仅文章详情且启用目录时加载） -->
  {toc && (
    <link
      slot="head"
      rel="preload"
      href="/tocbot/tocbot.min.css"
      as="style"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
      onload={linkPreloadOnLoad}
    />
  )}
  {toc && (
    <noscript slot="head">
      <link
        rel="stylesheet"
        href="/tocbot/tocbot.min.css"
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
    </noscript>
  )}
  <!-- KaTeX 数学公式样式（仅文章详情且启用公式时加载） -->
  {math && (
    <link
      slot="head"
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.33/dist/katex.min.css"
      as="style"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
      onload={linkPreloadOnLoad}
    />
  )}
  {math && (
    <noscript slot="head">
      <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/katex@0.16.33/dist/katex.min.css"
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
    </noscript>
  )}
  <Header />

  <!-- 文章标题与发布日期（不在 main 内） -->
  <section class="mx-auto mt-4 mb-2 w-full max-w-4xl text-center">
    <h1 class="text-2xl font-semibold">{title}</h1>
    <p class="mt-1 text-sm text-accent">{publishDisplayDate}</p>
  </section>

  <!-- 主内容区（TOC 在 main 外，大屏下与 main 同行） -->
  <main
    id="main-content"
    class="mx-auto w-full max-w-4xl pb-8"
    data-pagefind-body
  >
    <!-- 文章内容 -->
    <article
      id="article"
      class="js-toc-content mx-auto prose mt-4 mb-12 max-w-4xl"
    >
      <Content />
    </article>

    <!-- 标签列表 -->
    <ul class="my-1 flex flex-col flex-wrap space-y-2 md:flex-row md:space-y-0">
      {
        tags.length > 0 && (
          <li class="flex items-center space-x-0.5">
            <IconTag class="mt-0.5 h-4 w-4" />
            <ul>
              {tags.map((tag: string) => (
                <Tag tag={slugifyStr(tag)} tagName={tag} />
              ))}
            </ul>
          </li>
        )
      }
    </ul>
    <hr class="my-6" />

    <!-- Previous/Next Post Buttons -->
    <div
      data-pagefind-ignore
      class="my-6 grid grid-cols-1 gap-6 sm:grid-cols-2"
    >
      <!-- 上一篇 -->
      {
        prevPost && (
          <a href={prevPost.path} class="flex w-full gap-1 hover:opacity-75">
            <IconChevronLeft class="inline-block flex-none" />
            <div>
              <div class="text-sm text-accent/85">{prevPost.title}</div>
            </div>
          </a>
        )
      }
      <!-- 下一篇 -->
      {
        nextPost && (
          <a
            href={nextPost.path}
            class="flex w-full justify-end gap-1 text-right hover:opacity-75 sm:col-start-2"
          >
            <div>
              <div class="text-sm text-accent/85">{nextPost.title}</div>
            </div>
            <IconChevronRight class="inline-block flex-none" />
          </a>
        )
      }
    </div>

    <!-- 评论容器 -->
    <div id="Comments"></div>
  </main>

  <Footer />
  <aside
    id="sidebar"
    slot="sidebar"
    class:list={["sidebar", "hidden lg:block", { "no-toc": !toc }]}
  >
    {
      toc && (
        <>
          <div id="toc-container" class="js-toc" />
        </>
      )
    }
    <div
      class="flex flex-col items-start space-y-0 truncate overflow-hidden whitespace-nowrap opacity-80"
    >
    </div>
  </aside>
</Layout>

<!-- Artalk 评论系统 -->
<Artalk />

<script>
  /**
   * 目录（TOC）初始化：加载 tocbot，绑定到 .js-toc / .js-toc-content
   * View Transitions 后滚动到顶部，并在新页面有 TOC 时重新初始化
   */

  interface TocbotApi {
    init(options: {
      tocSelector: string;
      contentSelector: string;
      headingSelector: string;
      hasInnerContainers: boolean;
      scrollSmoothDuration: number;
      scrollSmoothOffset: number;
    }): void;
  }

  function getTocbot(): TocbotApi | undefined {
    if (typeof window === "undefined") return undefined;
    return (window as Window & { tocbot?: TocbotApi }).tocbot;
  }

  const SCROLL_SMOOTH_OFFSET = 0;

  function initTocbot(): void {
    const tocbot = getTocbot();
    if (!tocbot) return;
    tocbot.init({
      tocSelector: ".js-toc",
      contentSelector: ".js-toc-content",
      headingSelector: "h2, h3, h4",
      hasInnerContainers: true,
      scrollSmoothDuration: 300,
      scrollSmoothOffset: SCROLL_SMOOTH_OFFSET,
    });
  }

  function tryLoadAndInitTocbot(): void {
    if (!document.getElementById("toc-container")) return;
    if (getTocbot()) {
      initTocbot();
    } else {
      const script = document.createElement("script");
      script.src = "/tocbot/tocbot.min.js";
      script.crossOrigin = "anonymous";
      script.referrerPolicy = "no-referrer";
      script.onload = initTocbot;
      document.body.appendChild(script);
    }
  }

  tryLoadAndInitTocbot();

  document.addEventListener("astro:after-swap", () => {
    window.scrollTo({ left: 0, top: 0, behavior: "instant" });
    tryLoadAndInitTocbot();
  });
</script>
