---
/**
 * 404 错误页
 *
 * @fileoverview 显示当用户访问不存在的页面时
 *
 * 核心逻辑：
 * 1. 显示 404 提示信息
 * 2. 鼠标悬停时显示动画图片（从静态图切换到 GIF）
 * 3. 提供返回首页的按钮
 *
 * 依赖关系：
 * - 当路由匹配失败时自动显示
 * - 文案与图片路径直接写在本页
 */

import Layout from "@/layouts/Layout.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";

const notFoundStaticImage = "https://cos.lhasa.icu/StylePictures/404.webp";
const notFoundAnimatedImage = "https://cos.lhasa.icu/StylePictures/404.gif";
const notFoundTitle = "404，您访问的页面不存在～";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <div class="mb-14 flex flex-col items-center justify-center">
    <!-- 图片容器：包含静态图和动画图 -->
    <div
      id="image-container"
      class="relative aspect-square w-full max-w-[350px]"
    >
      <!-- 静态图片（默认显示） -->
      <img
        id="static-image"
        src={notFoundStaticImage}
        alt="404 Not Found"
        loading="eager"
        decoding="async"
        class="absolute top-0 left-0 z-10 h-full w-full object-contain"
      />
      <!-- 动画图片（鼠标悬停时显示） -->
      <img
        id="animated-image"
        src={notFoundAnimatedImage}
        alt="404 Not Found"
        loading="lazy"
        decoding="async"
        class="absolute top-0 left-0 hidden h-full w-full max-w-full object-contain"
      />
    </div>
    <!-- 错误提示文本 -->
    <p class="mt-4 text-xl">{notFoundTitle}</p>
    <!-- 返回首页按钮 -->
    <LinkButton
      href="/"
      class="my-6 text-sm decoration-dashed underline-offset-8"
    >
      {"回到首页 >>"}
    </LinkButton>
  </div>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("image-container");
    const staticImage = document.getElementById("static-image");
    const animatedImage = document.getElementById("animated-image");

    if (!container || !staticImage || !animatedImage) return;

    // 鼠标悬停时显示动画
    container.addEventListener("mouseenter", () => {
      staticImage.style.display = "none";
      animatedImage.classList.remove("hidden");
    });

    // 鼠标离开时显示静态图片
    container.addEventListener("mouseleave", () => {
      staticImage.style.display = "block";
      animatedImage.classList.add("hidden");
    });
  });
</script>
