      const minSeconds = 240;  // 4'00"
      const maxSeconds = 480;  // 8'00"
      const ratio = (maxSeconds - paceSeconds) / (maxSeconds - minSeconds);
      return Math.max(20, Math.min(100, 20 + ratio * 80));
    }

